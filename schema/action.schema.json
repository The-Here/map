{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Atomic Action",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "action",
    "place",
    "time",
    "references"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^evt_[0-9A-Za-z_\\-]+$"
    },

    "action": {
      "type": "string",
      "minLength": 1
    },

    "place": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "lat", "lon"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "lat": {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        "lon": {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        }
      }
    },

    "time": {
      "type": "object",
      "additionalProperties": false,
      "required": ["value", "precision"],
      "properties": {
        "value": {
          "type": "string",
          "minLength": 1
        },
        "precision": {
          "type": "string",
          "enum": [
            "day",
            "month",
            "year",
            "century",
            "era"
          ]
        }
      }
    },

    "references": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary"],
      "properties": {
        "primary": {
          "$ref": "#/definitions/reference"
        },
        "secondary": {
          "type": "array",
          "maxItems": 2,
          "items": {
            "$ref": "#/definitions/reference"
          }
        }
      }
    }
  },

  "definitions": {
    "reference": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "url", "content_hash"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "content_hash": {
          "type": "object",
          "additionalProperties": false,
          "required": ["algo", "value"],
          "properties": {
            "algo": {
              "const": "sha256"
            },
            "value": {
              "type": "string",
              "pattern": "^[a-f0-9]{64}$"
            }
          }
        }
      }
    }
  }
}

